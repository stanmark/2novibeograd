{% extends 'base.html.twig' %}

{% block body %}
    <h1>Groupp</h1>

    <table>
        <tbody>
            <tr>
                <th>Groupp</th>
                <td>{{ groupp.groupp }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ groupp.id }}</td>
            </tr>
