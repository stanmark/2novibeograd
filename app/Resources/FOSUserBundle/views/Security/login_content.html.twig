{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div class="alert alert-danger" role="alert">
        {{ error.messageKey|trans(error.messageData, 'security') }}

    </div>
{% endif %}


        <h1>Molimo Vas ulogojte se</h1>
        <form class="login-form" action="{{ path("fos_user_security_check") }}" method="post">
            {% if csrf_token %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            {% endif %}   

            <div class="row">
                <div class="col-xs-6">
                    {#<label for="username" class="form-control form-control-solid placeholder-no-fix form-group">{{ 'security.login.username'|trans }}</label>#}
                    <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control form-control-solid placeholder-no-fix form-group" placeholder="Email" required autofocus>
                </div>
                <div class="col-xs-6">
                    {#<label for="password" class="sr-only">{{ 'security.login.password'|trans }}</label>#}
                    <input type="password" id="password" name="_password" required="required" class="form-control form-control-solid placeholder-no-fix form-group" placeholder="Password">
                </div>
            </div>

            <div class="row">
                <div class="col-sm-4">
                    <div class="rem-password">
                        <label class="rememberme mt-checkbox mt-checkbox-outline" for="remember_me">{{ 'security.login.remember_me'|trans }}
                            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                            <span></span>
                        </label>
                    </div>
                </div>
                <div class="col-sm-8 text-right">
                    <input type="submit" id="_submit" name="_submit" class="btn btn-success" value="{{ 'security.login.submit'|trans }}" />
                </div>
            </div>
        </form>
    </div>
</div>



