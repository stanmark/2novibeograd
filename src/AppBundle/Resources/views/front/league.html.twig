{% extends '@AppBundle/Resources/views/front/base.html.twig' %}
{% block body %}
    {% include '@AppBundle/Resources/views/front/header.html.twig' %}

    <body class="c-layout-header-fixed c-layout-header-mobile-fixed">
        <div class="c-layout-breadcrumbs-1 c-bgimage-full   c-fonts-uppercase c-fonts-bold   c-bg-img-center" 
             style="background-image: url(../../../../public/Front/images/volleyball-1034436_1920.jpg)">
            <div class="c-breadcrumbs-wrapper">
                <div class="container">
                    <div class="c-page-title c-pull-left">
                        <h3 class="c-font-uppercase c-font-bold c-font-white c-font-20 c-font-slim c-opacity-09">Tim trenera</h3>
                        <h4 class="c-font-white c-font-thin c-opacity-09">Tim</h4>
                    </div>
                    <ul class="c-page-breadcrumbs c-theme-nav c-pull-right c-fonts-regular">
                        <li><a href="javascript:;" class="c-font-white">Naslovna</a></li>
                        <li class="c-font-white">/</li>
                        <li><a href="#" class="c-font-white">Tim trenera</a></li>
                    </ul>
                </div>
            </div>
        </div><!-- END: LAYOUT/BREADCRUMBS/BREADCRUMBS-4 -->
        <!-- BEGIN: PAGE CONTENT -->
        <div class="c-content-box c-size-md c-bg-white">
            <div class="container">
                <div class="c-content-title-1">
                    <h3 class="c-center c-font-dark c-font-uppercase">{{ oneleague.league }}</h3>
                    <div class="c-line-center c-theme-bg"></div>
                    <p class="c-center">Description</p>
                </div>
                <div class="c-content-panel">
                    <div class="c-label">Grupe {{ oneleague.league }} </div>                      
                    <div class="c-body">
                        <div class="row">
                            <div class="col-md-12">						
                                {% for groupp in oneleague.groupp %}
                                    <div class="table-responsive">
                                        {{ groupp.groupp }}
                                        <table class="table table-bordered">
                                            <thead>
                                                <tr>
                                                    <th>#</th>
                                                    <th>Ekipe</th>
                                                    <th>Pozicija</th>
                                                    <th>Suma setova</th>
                                                    <th>Izgubljenih</th>
                                                    <th>Broj utakmica</th>
                                                    <th>%</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {% for team in groupp.team %}
                                                    <tr>
                                                        <th></th>
                                                        <td>{{ team.team }} </td>
                                                        <td>Table cell</td>
                                                        <td>Table cell</td>
                                                        <td>Table cell</td>
                                                        <td>Table cell</td>
                                                        <td>Table cell</td>
                                                    </tr>
                                                {% endfor %}							
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="c-content-panel">
                        <div class="c-label">Utakmice</div>                      
                        <div class="c-body">
                            <div class="row">
                                <div class="col-md-12">						
                                    <div class="table-responsive">
                                        {{ groupp.groupp }} <br><br>
                                        {% for round in groupp.round %}
                                                    {{round.round}}
                                                   
                                        <table class="table table-bordered">
                                            <thead>
                                                <tr>
                                                   
                                                    <th>Domacin</th>
                                                    <th>SET</th>
                                                    <th>SET</th>
                                                    <th>Gost</th>
                                                    <th>Mesto</th>
                                                    <th>Datum</th>
                                                    <th>Pocetak</th>
                                                    <th>Kraj</th>
                                                </tr>
                                            </thead>
                                             
                                            <tbody>
                                                {% for game in round.game %}
                                                        <tr>
                                                            <td>{{ game.team1.team }}</td>
                                                            <td>{{ game.numberSet1 }}</td>
                                                            <td>{{ game.numberSet2 }}</td>
                                                            <td>{{ game.team2.team }}</td>     
                                                            <td>{{ game.place.title }}</td>  
                                                            <td>{{ game.date| date('d-m-Y')  }}</td>  
                                                            <td>{{ game.begin| date('H:i')  }}</td>  
                                                            <td>{{ game.end| date('H:i') }}</td>                                                                                                        
                                                        </tr>
                                                 {% endfor %}					
                                            </tbody>
                                               
                                        </table>
                                                        
                                               	{% endfor %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}         
            </div>
        </div>
    </body> 
    {% include '@AppBundle/Resources/views/front/footer.html.twig' %}
{% endblock %}     