{% extends '@AppBundle/Resources/views/front/base.html.twig' %}
{% block SEO %}
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no">
    {% for BreadCrump in BreadCrumps if BreadCrump.name == 'Kontakt' %}
        <title>{{ BreadCrump.titletag }}</title>
        <meta name="description" content="{{ BreadCrump.description }}" />
    {% endfor %}
{% endblock %}

{% block body %}
    <body class="c-layout-header-fixed c-layout-header-mobile-fixed">
        {% include '@AppBundle/Resources/views/front/header.html.twig' %}

        <div class="c-layout-breadcrumbs-1 c-bgimage-full   c-fonts-uppercase c-fonts-bold   c-bg-img-center" 
             {% for BreadCrump in BreadCrumps if BreadCrump.name == 'Kontakt' %}
                 {% for mainGallery in BreadCrump.mainGallery %}
                     style="background-image: url({{ vich_uploader_asset(mainGallery, 'imageFile') }})">
                 {% endfor %}
                 <div class="c-breadcrumbs-wrapper">
                     <div class="container">
                         <div class="c-page-title c-pull-left">
                             <h3 class="c-font-uppercase c-font-bold c-font-white c-font-20 c-font-slim c-opacity-09">{{BreadCrump.name}}</h3>
                         </div>
                         <ul class="c-page-breadcrumbs c-theme-nav c-pull-right c-fonts-regular">
                             <li><a href="{{ path ('home') }}" class="c-font-white">Naslovna</a></li>
                             <li class="c-font-white">/</li>
                             <li><a href="#" class="c-font-white">{{BreadCrump.name}}</a></li>
                         </ul>
                     </div>
                 </div>
             {% endfor %}
        </div><!-- END: LAYOUT/BREADCRUMBS/BREADCRUMBS-4 -->

        <!-- BEGIN: PAGE CONTAINER -->

        <!-- BEGIN: PAGE CONTENT -->
        <!-- BEGIN: CONTENT/CONTACT/CONTACT-1 -->
        <div class="c-content-box c-size-md c-bg-img-top c-no-padding c-pos-relative">
            <div class="container">
                <div class="c-content-contact-1 c-opt-1">
                    <div class="row" data-auto-height=".c-height">
                        <div class="col-sm-8 c-desktop"></div>
                        <div class="col-sm-4">
                            <div class="c-body">
                                {% for company in companies %}
                                    <div class="c-section">
                                        <h3>{{company.name}}</h3>
                                    </div>
                                    <div class="c-section">
                                        <div class="c-content-label c-font-uppercase c-font-bold c-theme-bg">Adresa</div>
                                        <p>{{company.adress}}<br/>{{company.city}}</p>
                                    </div>
                                    <div class="c-section">
                                        <div class="c-content-label c-font-uppercase c-font-bold c-theme-bg">Kontakt</div>
                                        <p><strong>T</strong> {{company.phone}}</p>
                                    </div>
                                    <div class="c-section">
                                        <div class="c-content-label c-font-uppercase c-font-bold c-theme-bg">Social</div><br/>
                                        <ul class="c-content-iconlist-1 c-theme">
                                            <li><a href="{{ company.faceurl }}"><i class="fa fa-facebook"></i></a></li>
                                            <li><a href="{{ company.gurl }}"><i class="fa fa-google-plus"></i></a></li>
                                            <li><a href="{{ company.instagram }}"><i class="fa fa-instagram"></i></a></li>
                                        </ul>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            </div> 
            <div id="gmapbg" class="c-content-contact-1-gmap" style="height: 615px;"></div>
        </div> <!-- END: CONTENT/CONTACT/CONTACT-1 -->

        <!-- BEGIN: CONTENT/CONTACT/FEEDBACK-2 -->
        <div class="c-content-box c-size-md c-no-padding c-bg-img-center" style="background-image:url(../../public/Front/images/volleyball-1034436_1920.jpg);">
            <div class="container">
                <div class="c-content-feedback-1 c-option-2">
                    <div class="c-content-title-1">
                        <h3 class="c-center c-font-white c-font-bold c-font-uppercase ">OK NOVI<span class="c-font-black"> BEOGRAD</span></h3>
                        <div class="c-line-center c-left"></div><div class="c-line-center c-right"></div>
                        <p class="c-center c-font-white ">Najbolja&nbsp;<span class="c-font-regular">&nbsp;&nbsp;škola odbojke</span></p>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="c-container c-bg-white c-bg-img-bottom-right" style="background-image:url()">
                                <div class="c-content-title-1">
                                    <h3 class="c-font-uppercase c-font-bold">Želite da probate?</h3>
                                    <div class="c-line-left"></div>
                                    <p class="c-font-lowercase">Posetite nas na jednu od lokacija i zaigrajte odbojku - prvi trening je besplatan</p>                                   
                                </div>
                            </div>
                            
                        </div>
                        <div class="col-md-6">
                            
                            <div class="c-container c-bg-white c-bg-img-bottom-right" style="background-image:url()">
                                <div class="c-content-title-1">
                                    <h3 class="c-font-uppercase c-font-bold">Imate pitanja?</h3>
                                    <div class="c-line-left"></div>                                  
                                    <p class="c-font-lowercase">
                                        Nazovite nas na 060 33 86 930, i informišite se o samom treningu i pogodnostima koje pružamo
                                    </p>
                                </div>
                            </div>
                        </div>
                        
                    </div>
                </div>
            </div> 
        </div>
        <!-- END: CONTENT/CONTACT/FEEDBACK-2 -->

        <!-- END: PAGE CONTENT -->

        <!-- END: PAGE CONTAINER -->

        <!-- END: PAGE CONTAINER -->
        {% include '@AppBundle/Resources/views/front/footer.html.twig' %}
        {% block jq %}
            {{ parent() }}
        
        <script>
            function initMap() {
                var uluru = {lat: 44.829527, lng: 20.412322};
                var map = new google.maps.Map(document.getElementById('gmapbg'), {
                    zoom: 19,
                    center: uluru
                });
                var marker = new google.maps.Marker({
                    position: uluru,
                    map: map
                });
            }
        </script>
        <script async defer
                src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBT1EkDSM41qV_b3JfpMXYLka8kESxGc20&callback=initMap">
        </script>
        
        {% endblock %}
    </body>

{% endblock %}     