{% extends '@AppBundle/Resources/views/admin/table.html.twig' %}

{% block tbody %}
    <h1>Blog</h1>

    <table  class="table table-striped table-bordered table-hover" id="sample_1">
        <tbody>
            <tr>
                <th>Title</th>
                <td>{{ blog.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ blog.description | raw}}</td>
            </tr>    
            <tr>
                <th>Slika</th>
                <td> {% for picture in blog.mainGallery %}
                    <img src="{{ vich_uploader_asset(picture, 'imageFile') }}" height="50" width="50" />
                    {% endfor %}</td>
                </tr> 
            </tbody>
        </table>
        {{ form_start(delete_form) }}
        <div  class="btn-group btn-group-circle btn-group-solid">
            <a href="{{ path('blog_index') }}" class="btn green">Back to the list</a>

            <a href="{{ path('blog_edit', { 'slug': blog.slug }) }}" class="btn yellow">Edit</a>
            <input type="submit" value="Delete" class="btn red">
        </div>
        {{ form_end(delete_form) }}

        {% endblock %}
