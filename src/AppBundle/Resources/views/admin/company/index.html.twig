                <td>{{ company.twiterurl }}</td>
                <td>{{ company.pib }}</td>
                <td>{{ company.matnumber }}</td>
                <td>{{ company.bankacount }}</td>
                <td>{{ company.bank }}</td>
                 <td>{{ company.phone }}</td>
                <td>{{ company.mail }}</td>
                <td>{{ company.id }}</td>
                <td>
                    
                            <a href="{{ path('company_show', { 'id': company.id }) }}"class="btn btn-info btn-circle"> <i class="fa fa-eye"></i></a>
                        
                            <a href="{{ path('company_edit', { 'id': company.id }) }}"class="btn btn-info btn-circle"><i class="fa fa-pencil-square-o"></i></a>
                      
                </td>
            </tr>
        {% endfor %}
        </tbody>
