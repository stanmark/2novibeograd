            </tr>
        </thead>
        <tbody>
        {% for company in companies %}
            <tr>
                <td><a href="{{ path('company_show', { 'id': company.id }) }}">{{ company.name }}</a></td>
                <td>{{ company.adress }}</td>
                <td>{{ company.city }}</td>
                <td>{{ company.faceurl }}</td>
                <td>{{ company.linkedinurl }}</td>
