{% extends '@AppBundle/Resources/views/admin/table.html.twig' %}

{% block thead %}
    <h1>Companies list</h1>
    <table class="table table-striped table-bordered table-hover js-table" id="sample_1"  >
        <thead>
            <tr>
                <th>Name</th>
                <th>Adress</th>
                <th>Phone</th>
                <th>Mail</th>
                <th>City</th>
                <th>Faceurl</th>
                <th>Gurl</th>
                <th>Pib</th>
                <th>Matnumber</th>
                <th>Bankacount</th>
                <th>Bank</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
    {% endblock %}

    {% block tbody %}

        <tbody>
            {% for company in companies  %}
                <tr>
                    <td><a href="{{ path('company_show', { 'slug': company.slug }) }}">{{ company.name }}</a></td>
                    <td>{{ company.adress }}</td>
                    <td>{{ company.phone }}</td>
                    <td>{{ company.mail }}</td>
                    <td>{{ company.city }}</td>
                    <td>{{ company.faceurl }}</td>
                    <td>{{ company.gurl }}</td>
                    <td>{{ company.pib }}</td>
                    <td>{{ company.matnumber }}</td>
                    <td>{{ company.bankacount }}</td>
                    <td>{{ company.bank }}</td>
                    <td>{{ company.description  [:50] | raw  }}</td>
                    <td class="btn-group btn-group-circle btn-group-solid">    
                        <a  class="btn blue" href="{{ path('company_show', { 'slug': company.slug }) }}">show</a>
                        <a class="btn yellow" href="{{ path('company_edit', { 'slug': company.slug }) }}">edit</a>
                        <a class="btn red 
                           js-delete-row"  
                           href="#"                          
                           data-url="{{ path ('company_delete', {'slug':company.slug}) }}"
                           >delete</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('company_new') }}" class="btn btn-circle green">Create a new company</a>

{% endblock %}
