{% extends '@AppBundle/Resources/views/admin/table.html.twig' %}

{% block thead %}
   
        <thead>
            <tr>
                <th>Name</th>
                <th>Adress</th>
                <th>Phone</th>
                <th>Mail</th>
                <th>City</th>
                <th>Faceurl</th>
                <th>Gurl</th>
                <th>Pib</th>
                <th>Matnumber</th>
                <th>Bankacount</th>
                <th>Bank</th>
                <th>Id</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
{% endblock %}

{% block tbody %}
        {% for company in companies %}
            <tr>
                <td><a href="{{ path('company_show', { 'id': company.id }) }}">{{ company.name }}</a></td>
                <td>{{ company.adress }}</td>
                <td>{{ company.phone }}</td>
                <td>{{ company.mail }}</td>
                <td>{{ company.city }}</td>
                <td>{{ company.faceurl }}</td>
                <td>{{ company.gurl }}</td>
                <td>{{ company.pib }}</td>
                <td>{{ company.matnumber }}</td>
                <td>{{ company.bankacount }}</td>
                <td>{{ company.bank }}</td>
                <td>{{ company.id }}</td>
                <td>{{ company.description }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('company_show', { 'id': company.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('company_edit', { 'id': company.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
   

    <ul>
        <li>
            <a href="{{ path('company_new') }}">Create a new company</a>
        </li>
    </ul>
{% endblock %}
