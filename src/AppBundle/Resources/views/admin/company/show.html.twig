{% extends '@AppBundle/Resources/views/admin/table.html.twig' %}

{% block tbody %}
    <h1>Company</h1>

    <table  class="table table-striped table-bordered table-hover" id="sample_1">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ company.name }}</td>
            </tr>
            <tr>
                <th>Adress</th>
                <td>{{ company.adress }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ company.phone }}</td>
            </tr>
            <tr>
                <th>Mail</th>
                <td>{{ company.mail }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ company.city }}</td>
            </tr>
            <tr>
                <th>Faceurl</th>
                <td>{{ company.faceurl }}</td>
            </tr>
            <tr>
                <th>Gurl</th>
                <td>{{ company.gurl }}</td>
            </tr>
            <tr>
                <th>instagram</th>
                <td>{{ company.instagram }}</td>
            </tr>
            <tr>
                <th>Pib</th>
                <td>{{ company.pib }}</td>
            </tr>
            <tr>
                <th>Matnumber</th>
                <td>{{ company.matnumber }}</td>
            </tr>
            <tr>
                <th>Bankacount</th>
                <td>{{ company.bankacount }}</td>
            </tr>
            <tr>
                <th>Bank</th>
                <td>{{ company.bank }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ company.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ company.description | raw }}</td>
            </tr>
        </tbody>
    </table>

    {{ form_start(delete_form) }}
    <div  class="btn-group btn-group-circle btn-group-solid">
        <a href="{{ path('company_index') }}" class="btn green" >Back to the list</a>

        <a href="{{ path('company_edit', { 'slug': company.slug }) }}"  class="btn yellow">Edit</a>
        <input type="submit" value="Delete"  class="btn red">
    </div>
    {{ form_end(delete_form) }}

{% endblock %}

