{% extends '@AppBundle/Resources/views/admin/table.html.twig' %}

{% block thead %}
        <tbody>
            <tr>
                <th>League</th>
                <td>{{ league.league }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ league.id }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if league.created %}{{ league.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if league.updated %}{{ league.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('league_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('league_edit', { 'id': league.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
