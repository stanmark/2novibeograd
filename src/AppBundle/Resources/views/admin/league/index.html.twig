{% extends '@AppBundle/Resources/views/admin/table.html.twig' %}

{% block thead %}
    <h1>Leagues list</h1>

    <table class="table table-striped table-bordered table-hover js-table" id="sample_1"  >
        <thead>
            <tr>
                <th>League</th>
                <th>Opis</th>
                <th>Godina</th>
                <th>Grupa</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% endblock %}

        {% block tbody %}
            {% for league in leagues %}
                <tr>
                    <td><a href="{{ path('league_show', { 'id': league.id }) }}">{{ league.league }}</a></td>
                    <td>{{ league.description }}</td>
                    <td>{{ league.year }}</td>
                    <td>
                        {% for groupp in league.groupp %}
                            {{ groupp.groupp }},
                        {% endfor %}
                    </td>   
                    <td class="btn-group btn-group-circle btn-group-solid"> 
                        <a href="{{ path('league_show', { 'id': league.id }) }}" class="btn green">show</a>
                        <a href="{{ path('league_edit', { 'id': league.id }) }}" class="btn yellow">edit</a>
                        <a class="btn red 
                           js-delete-row"  
                           href="#"                          
                           data-url="{{ path ('league_delete', {'id':league.id}) }}"
                           >delete</a>
                    </td>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('league_new') }}" class="btn btn-circle green">Create a new league</a>
{% endblock %}
