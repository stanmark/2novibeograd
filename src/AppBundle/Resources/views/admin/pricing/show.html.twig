{% extends '@AppBundle/Resources/views/admin/tableBase.html.twig' %}

{% block body %}
    <h1>Pricing</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ pricing.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ pricing.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ pricing.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('pricing_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('pricing_edit', { 'id': pricing.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
