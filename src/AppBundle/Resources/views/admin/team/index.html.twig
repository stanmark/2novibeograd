{% extends '@AppBundle/Resources/views/admin/table.html.twig' %}

{% block thead %}
    <h1>Teams list</h1>

    <table class="table table-striped table-bordered table-hover js-table" id="sample_1"  >
        <thead>
            <tr>
                <th>Liga</th>
                <th>Grupa</th>
                <th>Team</th>
                <th>Actions</th>
            </tr>
        </thead>
    {% endblock %}

    {% block tbody %}
        <tbody>
            {% for team in teams %}               
                <tr>
                    <td>{{ team.groupp.league.league }}</td>   
                    <td>{{ team.groupp.groupp }}</td>   
                    <td>{{ team.team }}</td>     
                    <td class="btn-group btn-group-circle btn-group-solid"> 
                        <a href="{{ path('team_show', { 'id': team.id }) }}"class="btn blue">show</a>
                        <a href="{{ path('team_edit', { 'id': team.id }) }}"class="btn yellow">edit</a>
                        <a class="btn red 
                           js-delete-row"  
                           href="#"                          
                           data-url="{{ path ('team_delete', {'id':team.id}) }}"
                           >delete</a>
                    </td>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('team_new') }}" class="btn btn-circle green">Create a new team</a>

{% endblock %}
{% block javascript %}   
    {{ parent() }}
    <script>
        $(document).ready(function () {
            var $table = $('.js-table');
            DeleteRow.initialize($table);

        });
    </script>


{% endblock %}
