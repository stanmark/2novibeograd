{% extends '@AppBundle/Resources/views/admin/table.html.twig' %}

{% block thead %}
    <h1>Breadcrumps list</h1>

    <table class="table table-striped table-bordered table-hover js-table" id="sample_1"  >
        <thead>
            <tr>
                <th>Name</th>
                <th>Slika</th>
                <th>Actions</th>
            </tr>
        </thead>
    {% endblock %}

    {% block tbody %}
        <tbody>
            {% for breadCrump in breadCrumps %}               
                <tr>                   
                    <td>{{ breadCrump.name }}</td>
                    <td>
                        {% for mainGallery in breadCrump.mainGallery %}
                            <img src="{{ vich_uploader_asset(mainGallery, 'imageFile') }}" height="50" width="50" />
                        {% endfor %}
                    </td>
                    <td class="btn-group btn-group-circle btn-group-solid">  
                        <a href="{{ path('breadcrumps_show', { 'slug': breadCrump.slug }) }}" class="btn blue">show</a>
                        <a href="{{ path('breadcrumps_edit', { 'slug': breadCrump.slug }) }}" class="btn yellow">edit</a>                      
                    </td>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('breadcrumps_new') }}" class="btn btn-circle green">Create a new breadCrump</a>

{% endblock %}
