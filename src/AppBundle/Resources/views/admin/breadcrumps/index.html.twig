{% extends '@AppBundle/Resources/views/admin/table.html.twig' %}

{% block thead %}
    <h1>Breadcrumps list</h1>

    <table class="table table-striped table-bordered table-hover js-table" id="sample_1"  >
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
    {% endblock %}

    {% block tbody %}
        <tbody>
            {% for breadCrump in breadCrumps %}
                <tr>
                    <td><a href="{{ path('breadcrumps_show', { 'id': breadCrump.id }) }}">{{ breadCrump.id }}</a></td>
                    <td>{{ breadCrump.name }}</td>
                    <td class="btn-group btn-group-circle btn-group-solid">  
                        <a href="{{ path('breadcrumps_show', { 'id': breadCrump.id }) }}" class="btn blue">show</a>
                        <a href="{{ path('breadcrumps_edit', { 'id': breadCrump.id }) }}" class="btn yellow">edit</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('breadcrumps_new') }}" class="btn btn-circle green">Create a new breadCrump</a>

{% endblock %}
{% block javascript %}   
    {{ parent() }}
    <script>
        $(document).ready(function () {
            var $table = $('.js-table');
            DeleteRow.initialize($table);

        });
    </script>


{% endblock %}