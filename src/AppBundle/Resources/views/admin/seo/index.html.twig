{% extends '@AppBundle/Resources/views/admin/table.html.twig' %}

{% block thead %}
    <h1>SEO list</h1>
    <table class="table table-striped table-bordered table-hover js-table" id="sample_1"  >
        <thead>
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>Titletag</th>
                <th>Title</th>
                <th>Actions</th>
            </tr>
        </thead>
    {% endblock %}

    {% block tbody %}
        <tbody>
            {% for sEO in sEOs %}              
                <tr>
                    <td><a href="{{ path('seo_show', { 'slug': sEO.slug }) }}">{{ sEO.id }}</a></td>
                    <td>{{ sEO.description }}</td>
                    <td>{{ sEO.titletag }}</td>
                    <td>{{ sEO.title }}</td>
                    <td class="btn-group btn-group-circle btn-group-solid">  
                        <a href="{{ path('seo_show', { 'slug': sEO.slug }) }}" class="btn blue">show</a>
                        <a href="{{ path('seo_edit', { 'slug': sEO.slug }) }}" class="btn yellow">edit</a>  
                        <a class="btn red 
                           js-delete-row"  
                           href="#"                          
                           data-url="{{ path ('seo_delete', {'slug':sEO.slug}) }}"
                           >delete</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('seo_new') }}"class="btn btn-circle green">Create a new sEO</a>

{% endblock %}

