{% extends '@AppBundle/Resources/views/admin/table.html.twig' %}

{% block thead %}
    <h1>Settresults list</h1>

    <table class="table table-striped table-bordered table-hover js-table" id="sample_1"  >
        <thead>
            <tr>
                <th>Liga</th>
                <th>Grupa</th>
                <th>Kolo</th>
                <th>Domacin</th>
                <th>Pointsnumber1</th>
                <th>Pointsnumber2</th>
                <th>Gost</th>
                <th>Actions</th>
            </tr>
        </thead>
    {% endblock %}

    {% block tbody %}
        <tbody>
            {% for settResult in settResults %}                
                <tr>
                    <td>{{ settResult.game.round.groupp.league.league }}</td>
                    <td>{{ settResult.game.round.groupp.groupp }}</td>  
                    <td>{{ settResult.game.round.rounds }}</td>  
                    <td>{{ settResult.game.team1.team }}</td>    
                    <td><a href="{{ path('settresults_show', { 'id': settResult.id }) }}">{{ settResult.pointsNumber1 }}</a></td>
                    <td>{{ settResult.pointsNumber2 }}</td>
                    <td>{{ settResult.game.team2.team }}</td>   
                   
                    <td class="btn-group btn-group-circle btn-group-solid">                 
                        <a href="{{ path('settresults_show', { 'id': settResult.id }) }}"class="btn blue">show</a>
                        <a href="{{ path('settresults_edit', { 'id': settResult.id }) }}" class="btn yellow">edit</a>
                        <a class="btn red 
                           js-delete-row"  
                           href="#"                          
                           data-url="{{ path ('settresults_delete', {'id':settResult.id}) }}"
                           >delete</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('settresults_new') }}" class="btn btn-circle green">Create a new settResult</a>
{% endblock %}

{% block javascript %}   
    {{ parent() }}
    <script>
        $(document).ready(function () {
            var $table = $('.js-table');
            DeleteRow.initialize($table);
        });
    </script>


{% endblock %}
