{% extends '@AppBundle/Resources/views/admin/table.html.twig' %}

{% block thead %}
    <h1>Homesliders list</h1>

    <table class="table table-striped table-bordered table-hover js-table" id="sample_1"  >
        <thead>
            <tr>
                <th>Slika</th>
                <th>Maintitle</th>
                <th>Subtitle</th>
                <th>Subtitledescription</th>
                <th>Calltoactionlink</th>
                <th>Calltoactionbutton</th>             
                <th>Actions</th>
            </tr>
        </thead>

    {% endblock %}

    {% block tbody %}
        <tbody>
            {% for homeSlider in homeSliders %}             
                <tr>
                     <td>
                        {% for picture in homeSlider.mainGallery %}
                            <img src="{{ vich_uploader_asset(picture, 'imageFile') }}" height="50" width="50" />
                        {% endfor %}
                    </td>
                    <td>{{ homeSlider.mainTitle }}</td>
                    <td>{{ homeSlider.subTitle }}</td>
                    <td>{{ homeSlider.subTitleDescription }}</td>
                    <td>{{ homeSlider.CallToActionLink }}</td>
                    <td>{{ homeSlider.CallToActionButton }}</td> 
                   
                    <td class="btn-group btn-group-circle btn-group-solid">
                        <a class="btn green" href="{{ path('homeslider_show', { 'slug': homeSlider.slug }) }}">show</a>
                        <a  class="btn yellow" href="{{ path('homeslider_edit', { 'slug': homeSlider.slug }) }}">edit</a>
                         <a class="btn red 
                           js-delete-row"  
                           href="#"                          
                           data-url="{{ path ('homeslider_delete', {'slug':homeSlider.slug}) }}"
                           >delete</a>
                    </td>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('homeslider_new') }}" class="btn btn-circle green">Create a new homeSlider</a>

{% endblock %}

