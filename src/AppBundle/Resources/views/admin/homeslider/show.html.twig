{% extends '@AppBundle/Resources/views/admin/table.html.twig' %}

{% block tbody %}
    <h1>Homeslider</h1>

    <table  class="table table-striped table-bordered table-hover" id="sample_1">
        <tbody>
            <tr>
                <th>Slika</th>
                <td>
                    {% for picture in homeSlider.mainGallery %}
                            <img src="{{ vich_uploader_asset(picture, 'imageFile') }}" height="100" width="100" />
                        {% endfor %}</td>
            </tr>
            <tr>
                <th>Maintitle</th>
                <td>{{ homeSlider.mainTitle }}</td>
            </tr>
            <tr>
                <th>Subtitle</th>
                <td>{{ homeSlider.subTitle }}</td>
            </tr>
            <tr>
                <th>Subtitledescription</th>
                <td>{{ homeSlider.subTitleDescription }}</td>
            </tr>
            <tr>
                <th>Calltoactionlink</th>
                <td>{{ homeSlider.CallToActionLink }}</td>
            </tr>
            <tr>
                <th>Calltoactionbutton</th>
                <td>{{ homeSlider.CallToActionButton }}</td>
            </tr>           
        </tbody>
    </table>

  
            
      
            {{ form_start(delete_form) }}
            <div  class="btn-group btn-group-circle btn-group-solid">
                <a href="{{ path('homeslider_index') }}" class="btn green">Back to the list</a>
       
            <a href="{{ path('homeslider_edit', { 'slug': homeSlider.slug }) }}" class="btn yellow">Edit</a>
                <input type="submit" value="Delete" class="btn red">
            </div>    
            {{ form_end(delete_form) }}
       
{% endblock %}
