{% extends '@AppBundle/Resources/views/admin/table.html.twig' %}

{% block tbody %}
    <h1>Ourservice</h1>

    <table  class="table table-striped table-bordered table-hover" id="sample_1">
        <tbody>          
            <tr>
                <th>Title</th>
                <td>{{ ourService.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ ourService.description }}</td>
            </tr>
            <tr>
                <th>Icon</th>
                <td>{{ ourService.icon }}</td>
            </tr>
        </tbody>
    </table>

    {{ form_start(delete_form) }}
    <div  class="btn-group btn-group-circle btn-group-solid">
        <a href="{{ path('ourservices_index') }}" class="btn green">Back to the list</a>
        <a href="{{ path('ourservices_edit', { 'id': ourService.id }) }}" class="btn yellow">Edit</a>
        <input type="submit" value="Delete" class="btn red">
    </div>    
    {{ form_end(delete_form) }}

{% endblock %}
