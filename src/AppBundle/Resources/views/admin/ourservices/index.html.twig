{% extends '@AppBundle/Resources/views/admin/table.html.twig' %}

{% block thead %}
    <h1>Ourservices list</h1>
    <table class="table table-striped table-bordered table-hover js-table" id="sample_1"  >
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Icon</th>
                <th>Actions</th>
            </tr>
        </thead>
    {% endblock %}

    {% block tbody %}
        <tbody>
            {% for ourService in ourServices %}
                <tr>
                    <td><a href="{{ path('ourservices_show', { 'id': ourService.id }) }}">{{ ourService.id }}</a></td>
                    <td>{{ ourService.title }}</td>
                    <td>{{ ourService.description }}</td>
                    <td>{{ ourService.icon }}</td>
                    <td class="btn-group btn-group-circle btn-group-solid">
                        <a href="{{ path('ourservices_show', { 'id': ourService.id }) }}" class="btn blue">show</a>

                        <a href="{{ path('ourservices_edit', { 'id': ourService.id }) }}" class="btn yellow">edit</a>                  
                        <a class="btn red 
                           js-delete-row"  
                           href="#"                          
                           data-url="{{ path ('ourservices_delete', {'id':ourService.id}) }}"
                           >delete</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('ourservices_new') }}" class="btn btn-circle green">Create a new ourService</a>

{% endblock %}

{% block javascript %}   
    {{ parent() }}
    <script>
        $(document).ready(function () {
            var $table = $('.js-table');
            DeleteRow.initialize($table);
            
        });
    </script>


{% endblock %}
