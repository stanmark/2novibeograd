{% extends 'base.html.twig' %}

{% block body %}
    <h1>Galerries list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Url</th>
                <th>Alt</th>
                <th>Created</th>
                <th>Updated</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for galerry in galerries %}
            <tr>
                <td><a href="{{ path('galerry_show', { 'id': galerry.id }) }}">{{ galerry.id }}</a></td>
                <td>{{ galerry.url }}</td>
                <td>{{ galerry.alt }}</td>
                <td>{% if galerry.created %}{{ galerry.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if galerry.updated %}{{ galerry.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('galerry_show', { 'id': galerry.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('galerry_edit', { 'id': galerry.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('galerry_new') }}">Create a new galerry</a>
        </li>
    </ul>
{% endblock %}
