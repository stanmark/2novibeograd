{% extends '@AppBundle/Resources/views/admin/table.html.twig' %}

{% block tbody %}
    <h1>Feature</h1>

    <table  class="table table-striped table-bordered table-hover" id="sample_1">
        <tbody>
            <tr>
                <th>Features</th>
                <td>{{ feature.features }}</td>
            </tr>
            <tr>
                <th>Pricing</th>
                <td>
                {% for feature in feature.pricing %}
                {{ feature.name }}
                {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

            {{ form_start(delete_form) }}
             <div  class="btn-group btn-group-circle btn-group-solid">
                  <a href="{{ path('features_index') }}"class="btn green">Back to the list</a>
                  <a href="{{ path('features_edit', { 'slug': feature.slug }) }}" class="btn yellow">Edit</a>
                <input type="submit" value="Delete" class="btn red">
                </div>
            {{ form_end(delete_form) }}
       
{% endblock %}
