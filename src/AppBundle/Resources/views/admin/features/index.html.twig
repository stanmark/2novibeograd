{% extends '@AppBundle/Resources/views/admin/table.html.twig' %}

{% block thead %}
        <thead>
            <tr>
                <th>Id</th>
                <th>Features</th>
                <th>Actions</th>
            </tr>
        </thead>
      {% endblock %}

{% block tbody %}
        {% for feature in features %}
            <tr>
                <td><a href="{{ path('features_show', { 'id': feature.id }) }}">{{ feature.id }}</a></td>
                <td>{{ feature.features }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('features_show', { 'id': feature.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('features_edit', { 'id': feature.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('features_new') }}">Create a new feature</a>
        </li>
    </ul>
{% endblock %}
