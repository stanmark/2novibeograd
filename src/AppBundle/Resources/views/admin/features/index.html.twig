{% extends '@AppBundle/Resources/views/admin/table.html.twig' %}

{% block thead %}
    <h1>Features list</h1>

     <table class="table table-striped table-bordered table-hover js-table" id="sample_1"  >
        <thead>
            <tr>            
                <th>Features</th>
                <th>Pricing</th>
                <th>Actions</th>
            </tr>
        </thead>
    {% endblock %}
    
    {% block tbody %}
        <tbody>
            {% for feature in features %}
                <tr>
                    <td><a href="{{ path('features_show', { 'slug': feature.id }) }}">{{ feature.features }}</a></td>
                    <td>
                    {% for pricing in feature.pricing %}
                    {{ pricing.name }},
                    {% endfor %}
                    </td>
                    <td class="btn-group btn-group-circle btn-group-solid">  
                        <a href="{{ path('features_show', { 'slug': feature.slug }) }} " class="btn green">show</a>
                        <a href="{{ path('features_edit', { 'slug': feature.slug }) }}" class="btn yellow">edit</a>
                         <a class="btn red 
                           js-delete-row"  
                           href="#"                          
                           data-url="{{ path ('features_delete', {'slug':feature.slug}) }}"
                           >delete</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>


    <a href="{{ path('features_new') }} " class="btn btn-circle green">Create a new feature</a>

{% endblock %}

