{% extends '@AppBundle/Resources/views/admin/table.html.twig' %}

{% block thead %}
    <h1>Places list</h1>

    <table class="table table-striped table-bordered table-hover js-table" id="sample_1"  >
        <thead>
            <tr>
                <th>Title</th>
                <th>Adress</th>
                <th>Description</th>
                <th>Treaning place</th>
                <th>Trener</th>
                <th>Galerija</th>
                <th>Actions</th>
            </tr>
        </thead>
    {% endblock %}

    {% block tbody %}
        <tbody>
            {% for place in places %}
                <tr>
                    <td><a href="{{ path('place_show', { 'id': place.id }) }}">{{ place.title }}</a></td>            
                    <td>{{ place.adress }}</td>
                    <td>{{ place.description [:50] | raw }}</td>              
                    <td>{% if place.treaningPlace %}Yes{% else %}No{% endif %}</td>

                    <td>
                        {% for member in place.member %}
                            {{ member.name }},
                        {% endfor %}
                    </td>
                    <td>
                        {% for mainGallery in place.mainGallery %}
                            <img src="{{ vich_uploader_asset(mainGallery, 'imageFile') }}" height="50" width="50" />
                        {% endfor %}
                    </td>

                    <td class="btn-group btn-group-circle btn-group-solid">                 
                        <a href="{{ path('place_show', { 'id': place.id }) }}" class="btn blue">show</a>
                        <a href="{{ path('place_edit', { 'id': place.id }) }}" class="btn yellow">edit</a>
                        <a class="btn red 
                           js-delete-row"  
                           href="#"                          
                           data-url="{{ path ('place_delete', {'id':place.id}) }}"
                           >delete</a>
                    </td>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('place_new') }}" class="btn btn-circle green">Create a new place</a>

{% endblock %}
{% block javascript %}   
    {{ parent() }}
    <script>
        $(document).ready(function () {
            var $table = $('.js-table');
            DeleteRow.initialize($table);

        });
    </script>


{% endblock %}
