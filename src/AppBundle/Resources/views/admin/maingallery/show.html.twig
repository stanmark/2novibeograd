{% extends '@AppBundle/Resources/views/admin/table.html.twig' %}

{% block tbody %}
    <h1>Maingallery</h1>

    <table  class="table table-striped table-bordered table-hover" id="sample_1">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ mainGallery.id }}</td>
            </tr>
            <tr>
                <th>Slika</th>
                <td> <img src="{{ vich_uploader_asset(mainGallery, 'imageFile') }}" height="100" width="100" /></td>
            </tr>
            <tr>
                <th>Liga</th>
                <td> 
                    {% for league in mainGallery.league %}
                        {{ league.league }}
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Clan tima</th>
                <td> 
                    {% for teamMember in mainGallery.teamMember %}
                        {{ teamMember.name }};                 
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Mesto</th>
                <td> 
                    {% for place in mainGallery.place %}
                        {{ place.title }};                  
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Slajder</th>
                <td> 
                    {% for homeSlider in mainGallery.homeSlider %}
                        {{ homeSlider.mainTitle }};                  
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Slika na svakoj strani</th>
                <td> 
                    {% for breadCrumps in mainGallery.breadCrumps %}
                        {{ breadCrumps.name }};
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Blog</th>
                <td> 
                    {% for blog in mainGallery.blog %}
                        {{ blog.title }};
                    {% endfor %}
                </td>
            </tr>

            <tr>
                <th>Alt</th>
                <td>{{ mainGallery.alt }}</td>
            </tr>
            <tr>
                <th>Mainpicture</th>
                <td>{% if mainGallery.mainPicture %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Mainpicturegallery</th>
                <td>{% if mainGallery.mainPictureGallery %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ mainGallery.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ mainGallery.description }}</td>
            </tr>        
        </tbody>
    </table>



    {{ form_start(delete_form) }}

    <div  class="btn-group btn-group-circle btn-group-solid">
        <a href="{{ path('maingallery_index') }}" class="btn green">Back to the list</a>
        <a href="{{ path('maingallery_edit', { 'slug': mainGallery.slug }) }}" class="btn yellow">Edit</a>
        <input type="submit" value="Delete" class="btn red">
    </div>    
    {{ form_end(delete_form) }}

{% endblock %}

