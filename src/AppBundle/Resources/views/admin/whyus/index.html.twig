{% extends '@AppBundle/Resources/views/admin/table.html.twig' %}

{% block thead %}
    <h1>Whyuses list</h1>

    <table class="table table-striped table-bordered table-hover js-table" id="sample_1"  >
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for whyU in whyuses %}
                <tr>
                    <td>{{ whyU.title }}</td>
                    <td>{{ whyU.description [:50] | raw }}</td>
                    <td class="btn-group btn-group-circle btn-group-solid"> 
                        <a href="{{ path('whyus_show', { 'slug': whyU.slug }) }}" class="btn blue">show</a>
                        <a href="{{ path('whyus_edit', { 'slug': whyU.slug }) }}" class="btn yellow">edit</a>                       
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}

