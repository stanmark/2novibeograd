{% extends '@AppBundle/Resources/views/admin/table.html.twig' %}
{% block thead %}
    <h1>Rounds list</h1>

    <table class="table table-striped table-bordered table-hover js-table" id="sample_1"  >
        <thead>
            <tr>
                <th>Liga</th>
                <th>Grupa</th>
                <th>Rounds</th>
                <th>Actions</th>
            </tr>
        </thead>
    {% endblock %}

    {% block tbody %}
        <tbody>
            {% for round in rounds %}
                <tr>
                    <td>{{ round.groupp.league.league }} </td>
                    <td>{{ round.groupp.groupp }}</td>
                    <td>{{ round.rounds }}</td>
                    <td class="btn-group btn-group-circle btn-group-solid"> 
                        <a href="{{ path('round_show', { 'slug': round.slug }) }}" class="btn green">show</a>                     
                        <a href="{{ path('round_edit', { 'slug': round.slug }) }}" class="btn yellow">edit</a>
                        <a class="btn red 
                           js-delete-row"  
                           href="#"                          
                           data-url="{{ path ('round_delete', {'slug':round.slug}) }}"
                           >delete</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

            <a href="{{ path('round_new') }}" class="btn btn-circle green">Create a new round</a>
 
{% endblock %}
