{% extends 'base.html.twig' %}

{% block body %}
    <h1>Time</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ time.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if time.date %}{{ time.date|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Day</th>
                <td>{{ time.day }}</td>
            </tr>
            <tr>
                <th>Begin</th>
                <td>{% if time.begin %}{{ time.begin|date('H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>End</th>
                <td>{% if time.end %}{{ time.end|date('H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if time.created %}{{ time.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if time.updated %}{{ time.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('time_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('time_edit', { 'id': time.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
