{% extends '@AppBundle/Resources/views/admin/table.html.twig' %}

{% block tbody %}
    <h1>Time</h1>

    <table  class="table table-striped table-bordered table-hover" id="sample_1">
        <tbody>
            <tr>
                <th>Day</th>
                <td>{{ time.day }}</td>
            </tr>
            <tr>
                <th>Begin</th>
                <td>{% if time.begin %}{{ time.begin|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>End</th>
                <td>{% if time.end %}{{ time.end|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>          
        </tbody>
    </table>
    {{ form_start(delete_form) }}
    <div  class="btn-group btn-group-circle btn-group-solid">
        <a href="{{ path('time_index') }}" class="btn green">Back to the list</a>
        <a href="{{ path('time_edit', { 'id': time.id }) }}" class="btn yellow">Edit</a>
        <input type="submit" value="Delete" class="btn red">
    </div>
    {{ form_end(delete_form) }}

{% endblock %}
